<h2><%= @post.title %></h2>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_list_post_path(@list, @post), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@post).destroy? %>
      <%= link_to "Delete Item", [@list, @post], method: :delete, class: 'btn btn-danger', data: [ confirm: 'Are you sure you want to delete this post?'] %>
    <% end %> 

  </div>
</div>
